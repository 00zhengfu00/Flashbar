<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flash_bar_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/warm_grey"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/flash_bar_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fb_content_padding_all">

        <TextView
            android:id="@+id/title"
            style="@style/FbTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fb_title_message_gap"
            android:visibility="gone"
            tools:text="Title"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/message"
            style="@style/FbTitleMessageStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/fb_title_message_gap"
            android:visibility="gone"
            tools:text="This is a new message."
            tools:visibility="visible" />

    </RelativeLayout>

</LinearLayout>